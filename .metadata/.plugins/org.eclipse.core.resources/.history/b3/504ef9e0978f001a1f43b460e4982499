package fitness;

import java.util.ArrayList;
import java.util.List;

public class TrPerson {
	private String training;
	private List<Viewer> viewers = new ArrayList<Viewer>();
	
	public void setTraining(String training)
	{
		this.training=training;
		int viewerCounter=1;
		System.out.println("Training person changed training to "+this.training);
		for(Viewer viewer: this.viewers)
		{
			viewer.setTraining(this.training);
			System.out.println("Viewer "+viewerCounter+"changed training to "+this.training);
			viewerCounter++;
		}
	
	}
		
	public void subscribe(Viewer viewer)
	{
		this.viewers.add(viewer);
	}
}
