package fitness;

public class Main {

	public static void main(String[] args) {
		Instructor instructor =new Instructor();
		Trainee trPerson = new Trainee();
		
		Spectator viewer1 = new Spectator();
		Spectator viewer2 = new Spectator();
		Spectator viewer3 = new Spectator();
		
		trPerson.subscribe(viewer1);
		trPerson.subscribe(viewer2);
		trPerson.subscribe(viewer3);
		
		Command changeTrainingToLieDown = new LieDown(trPerson);
		Command changeTrainingToGetUp = new StandUp(trPerson);
		
		instructor.setCommand(changeTrainingToLieDown);
		instructor.changeExercise();
		
		instructor.setCommand(changeTrainingToGetUp);
		instructor.changeExercise();
	}

}
