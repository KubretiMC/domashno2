package fitness;

import java.util.ArrayList;
import java.util.List;

public class Trainee {
	private String training;
	private List<Spectator> viewers = new ArrayList<Spectator>();
	
	public void setTraining(String training)
	{
		this.training=training;
		int viewerCounter=1;
		System.out.println("Training person changed exercise to "+this.training);
		for(Spectator viewer: this.viewers)
		{
			viewer.setTraining(this.training);
			System.out.println("Viewer "+viewerCounter+" changed exercise to "+this.training);
			viewerCounter++;
		}
	
	}
		
	public void subscribe(Spectator viewer)
	{
		this.viewers.add(viewer);
	}
}
